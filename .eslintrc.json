{
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "indent": [2, 4, { "SwitchCase": 1 }],
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "linebreak-style": [2, "unix"],
        "max-len": [2, 85, 4, {
            "ignoreComments": true
        }]
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended"
}
